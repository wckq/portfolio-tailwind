---
import Github from "@/components/icons/Github.astro"
import X from "@/components/icons/X.astro"

---

<div id="home" class="flex items-center justify-center min-h-screen">
    <div class="flex flex-col items-center">    
        <img 
            class="h-48 w-48 md:h-56 z-auto md:w-56 rounded-full shadow-lg transition-transform transform hover:scale-110 duration-300" 
            src="https://avatars.githubusercontent.com/u/70783670?v=4" 
            alt="David Muñoz"
        >
        <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mt-4">
            David Muñoz
        </h1>
        <p class="text-2xl font-bold text-purple-700 mt-2">
            Software Developer
        </p>

        <div class="flex flex-col max-w-80 md:max-w-sm text-center md:mx-auto">
            <p class="text-sm md:text-lg font-light text-gray-600 mt-2">
                <span class="text-purple-400">Full Stack Developer & Minecraft Developer</span>,
                currently <span class="text-purple-400">freelancing</span> on various projects
            </p>

            <div class="flex justify-center space-x-4 mt-3">
                <a aria-label="Redirect to Github" href="https://x.com/wckq_" target="_blank"><Github width={36} height={36}/></a>
                <a aria-label="Redirect to X" href="https://github.com/wckq" target="_blank"><X /></a>
            </div>
        </div>
    </div>
</div>
